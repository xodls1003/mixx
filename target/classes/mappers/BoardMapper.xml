<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.mixtest.mapper.BoardMapper">
	<select id="getList" resultType="Board">
		<![CDATA[
			select * from tbl_board where bno > 0
		]]>
	</select>
	
	<sql id="criteria">
		<if test="type!=null">
			<where>
				<trim prefixOverrides="OR">
					<foreach item='type' collection="typeArr">
						<trim prefix="OR">
							<choose>
								<when test="type == 'T'.toString()">
									title like
									 concat('%',#{keyword},'%')
								</when>
								<when test="type == 'C'.toString()">
									content like 
									concat('%',#{keyword},'%')
								</when>                                                               
								<when test="type == 'W'.toString()">
									writer like 
									concat('%',#{keyword},'%')
								</when>
							</choose>
						</trim>
					</foreach>
				</trim>
			</where>
		</if>
	</sql>
	
	<select id="getListWithPaging" resultType="Board" parameterType="Criteria">
		<![CDATA[
			select * 
			from tbl_board 
			]]>
			<include refid="criteria">
			</include>
			order by bno desc limit #{startNum},#{amount}
		
	</select>
	
	
	<insert id="insertSelectKey">
		
			insert into tbl_board(title,content,writer)
			values ( #{title}, #{content}, #{writer})
			
			<selectKey keyProperty="bno" order="AFTER" resultType="long">
					select last_insert_id() from dual;
		</selectKey>
		
	</insert>
	
	<select id="read" resultType="com.mixtest.domain.BoardVO">
		select * from tbl_board where bno = #{bno}
	</select>
	
	<insert id="insert">
		insert into tbl_board (title,content,writer)
		values(#{title}, #{content}, #{writer})
	</insert>
	
	<delete id="delete">
		delete from tbl_board where bno=#{bno}
	</delete>
	
	<update id="update"> 
		update tbl_board
		set title = #{title},
		content = #{content},
		writer=#{writer},
		updateDate = current_timestamp
	 	where bno=#{bno}
	</update>
	
	<select id="getTotalCount" resultType="int" parameterType="Criteria">
		select count(*) from tbl_board where bno>0
	</select>
	<update id="updateReplyCnt">
		update tbl_board set replycnt = replycnt + #{amount} where bno=#{bno}
	</update>	
	
</mapper>